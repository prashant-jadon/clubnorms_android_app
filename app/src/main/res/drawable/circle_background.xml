<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Define the solid color for the circle -->
    <solid android:color="@color/GreyLight"/>

    <!-- Optional: Add border to the circle -->
    <stroke
        android:width="2dp"
        android:color="@color/GreyLight" />

    <!-- Padding (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
